<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            app:layout_constraintHorizontal_bias="0"
            android:ellipsize="end"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toStartOf="@id/model_selected_icon"
            android:textColor="@color/black">
        </TextView>

        <ImageView
            android:id="@+id/model_selected_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/model_name"
            app:layout_constraintBottom_toBottomOf="@id/model_name"
            android:src="@drawable/model_icon"
            android:layout_marginStart="40dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/transparent">
        </ImageView>



</androidx.constraintlayout.widget.ConstraintLayout>